{
  "name": "wc-markdown",
  "type": "module",
  "version": "0.0.61-beta.2",
  "description": "基于 Web Components 的现代化 Markdown 渲染器 Monorepo",
  "author": "Byte-n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Byte-n/wc-renderer-markdown"
  },
  "homepage": "https://github.com/Byte-n/wc-renderer-markdown#readme",
  "bugs": {
    "url": "https://github.com/Byte-n/wc-renderer-markdown/issues"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "dev": "pnpm -r --filter \"./packages/*\" --parallel run dev",
    "prepare": "husky install",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "docs:build": "pnpm run --filter ./packages/playground build",
    "publish:all": "pnpm --filter ./packages/wc publish && pnpm --filter ./packages/wc-vue publish && pnpm --filter ./packages/wc-react publish"
  },
  "devDependencies": {
    "@rolldown/binding-win32-x64-msvc": "1.0.0-beta.45",
    "@types/node": "^22.18.13",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "husky": "^8.0.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "stylelint": "^14.9.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "eslint": "^8.26.0",
    "eslint-config-ay": "^1.0.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-require-jsdoc-except": "^1.5.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  }
}
