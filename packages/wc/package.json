        "lint": "eslint . --cache",
        "lint:fix": "eslint . --cache --fix",
        "prepublishOnly": "pnpm run build"
    },
    "dependencies": {
        "@lit/context": "^1.1.6",
        "katex": "^0.16.25",
        "lit": "^3.3.1",
        "shiki": "^3.14.0",
