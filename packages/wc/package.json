{
    "name": "wc-renderer-markdown",
    "type": "module",
    "version": "0.0.1",
    "description": "基于 Web Components 的现代化 Markdown 渲染器",
    "author": "Byte-n",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Byte-n/wc-renderer-markdown"
    },
    "homepage": "https://github.com/Byte-n/wc-renderer-markdown#readme",
    "bugs": {
        "url": "https://github.com/Byte-n/wc-renderer-markdown/issues"
    },
    "keywords": [
        "markdown",
        "web-components",
        "lit",
        "renderer",
        "katex",
        "shiki",
        "syntax-highlight"
    ],
    "packageManager": "pnpm@10.20.0",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "rollup -c -w",
        "build": "rollup -c",
        "test": "vitest",
        "test:run": "vitest --run",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --cache",
        "lint:fix": "eslint . --cache --fix",
        "prepublishOnly": "pnpm run build"
    },
    "peerDependencies": {
        "lit": "^3.0.0",
        "@lit/context": "^1.0.0"
    },
    "dependencies": {
        "katex": "^0.16.25",
        "shiki": "^3.14.0",
        "stream-markdown-parser": "workspace:*",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^6.0.0",
        "@rollup/plugin-commonjs": "^26.0.0",
        "@rollup/plugin-node-resolve": "^15.3.0",
        "@rollup/plugin-typescript": "^12.1.2",
        "@rollup/pluginutils": "^5.1.3",
        "@types/node": "^22.18.13",
        "postcss": "^8.5.6",
        "postcss-nesting": "^13.0.2",
        "rollup": "^4.24.0",
        "rollup-plugin-dts": "^6.1.1",
        "rollup-plugin-lit-css": "^6.0.0",
        "rollup-plugin-terser": "^7.0.2"
    }
}
