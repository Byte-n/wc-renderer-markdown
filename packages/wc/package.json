{
    "name": "wc",
    "type": "module",
    "version": "0.0.10",
    "packageManager": "pnpm@10.20.0",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "rollup -c -w",
        "build": "rollup -c",
        "test": "vitest",
        "test:run": "vitest --run",
