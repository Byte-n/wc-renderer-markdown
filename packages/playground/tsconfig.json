{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "rootDir": "./example",
    "paths": {
      "@/*": [
        "./example/*"
      ],
      "wc-renderer-markdown": [
        "../wc"
      ],
      "wc-renderer-markdown-react": [
        "../wc-react"
      ],
      "wc-renderer-markdown-vue": [
        "../wc-vue"
      ],
    },
    "outDir": "./dist",
    "jsx": "react"
  },
  "include": [
    "example/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
