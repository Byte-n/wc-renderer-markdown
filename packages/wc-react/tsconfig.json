{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015"
    ],
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "wc-renderer-markdown": [
        "../wc"
      ]
    },
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
