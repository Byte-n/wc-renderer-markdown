{
  "name": "wc-renderer-markdown-react",
  "type": "module",
  "version": "0.0.2",
  "description": "React wrapper for wc-renderer-markdown - 基于 Web Components 的 Markdown 渲染器 React 封装",
  "author": "Byte-n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Byte-n/wc-renderer-markdown"
  },
  "homepage": "https://github.com/Byte-n/wc-renderer-markdown#readme",
  "bugs": {
    "url": "https://github.com/Byte-n/wc-renderer-markdown/issues"
  },
  "keywords": [
    "markdown",
    "react",
    "web-components",
    "renderer",
    "wrapper"
  ],
  "packageManager": "pnpm@10.20.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "watch": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "test:run": "vitest --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "@lit/react": ">=1",
    "wc-renderer-markdown": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/ws": "^8.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "7.1.11",
    "vite-plugin-dts": "^4.5.4"
  }
}
